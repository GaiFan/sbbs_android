<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" 
        >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbgstyle"
                android:text="@string/mail_notice"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <ListView
                android:id="@+id/mail_notice_list"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" 
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbgstyle"
                android:text="@string/ats_notice"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <ListView
                android:id="@+id/ats_notice_list"
                android:layout_width="fill_parent"
                android:layout_height="0dp" 
                android:layout_weight="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbgstyle"
                android:text="@string/re_notice"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <ListView
                android:id="@+id/re_notice_list"
                android:layout_width="fill_parent"
                android:layout_height="0dp" 
                android:layout_weight="1" 
                />
    </LinearLayout>

</LinearLayout>