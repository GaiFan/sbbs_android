<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/new_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/aa_white"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/more_friends"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_above_background"
            android:drawableLeft="@drawable/menu_following"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/pop_friends"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/more_sections"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_mid_bg"
            android:drawableLeft="@drawable/menu_following"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/more_sections"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/more_recommend"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_mid_bg"
            android:drawableLeft="@drawable/icon_3"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/pop_recommend"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/more_notice"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_mid_bg"
            android:drawableLeft="@drawable/menu_notice"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/menu_notice"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/more_settings"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/list_below_background"
            android:drawableLeft="@drawable/ic_menu_settings"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/arrow_1"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/more_settings"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>