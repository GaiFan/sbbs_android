<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <View
        android:id="@+id/fav_header_split"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_header" >

        <Button
            android:id="@+id/search_content"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/header_new_btn"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/search_content_btn"
            android:textColor="#FFFFFF"
            android:textSize="15sp" >
        </Button>

        <EditText
            android:id="@+id/search_content_txt"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/search_content"
            android:hint="@string/search_content"
            android:imeOptions="actionDone"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

        <TextView
        android:id="@+id/search_content_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/dialog_box_2"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:padding="3dp"
        android:text="@string/search_content_hint" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/fav_header_split"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_header" >

        <Button
            android:id="@+id/search_board_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/header_new_btn"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/search_board_btn"
            android:textColor="#FFFFFF"
            android:textSize="15sp" >
        </Button>

        <EditText
            android:id="@+id/search_board_txt"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/search_board_btn"
            android:hint="@string/search_board"
            android:imeOptions="actionDone"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/search_board_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/dialog_box_2"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:padding="3dp"
        android:text="@string/search_board_hint" />

</LinearLayout>