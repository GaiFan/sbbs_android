<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginbgstyle"
    android:gravity="center"
    android:orientation="vertical" >

    <include layout="@layout/new_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/login_div_bg"
            android:padding="10dip" >

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="#0000FF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profile_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_username"
                android:paddingLeft="18dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/login_div_bg"
            android:padding="10dip" >

            <TextView
                android:id="@+id/profile_life_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_life_value"
                android:paddingLeft="18dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/login_div_bg"
            android:padding="10dip" >

            <TextView
                android:id="@+id/profile_logintime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_posttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_logintime"
                android:paddingLeft="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/login_div_bg"
            android:padding="10dip" >

            <TextView
                android:id="@+id/profile_performvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profile_performvalue"
                android:paddingLeft="18dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/maintab_toolbar_bg"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/profile_footer_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_share_selected"
        android:text="@string/post_footer_share" />

    <TextView
        android:id="@+id/profile_footer_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_author_selected"
        android:text="@string/profile_footer_add" />

    <TextView
        android:id="@+id/profile_footer_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_mail_selected"
        android:text="@string/post_footer_mail" />
    </LinearLayout>

</LinearLayout>