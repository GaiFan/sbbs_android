<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/about_body"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp" >

            <TextView
                android:id="@+id/version_title"
                style="@style/LinkText.Bold.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/version_title" />

            <TextView
                android:id="@+id/version_name"
                style="@style/normalText.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="@string/version_name" />

            <View
                android:id="@+id/devider_one"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/version_title"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tips_title"
                style="@style/LinkText.Bold.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/devider_one"
                android:text="@string/tips_title" />

            <TextView
                android:id="@+id/tips"
                style="@style/normalText.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tips_title"
                android:text="@string/tips" />
            <View
                android:id="@+id/devider_two"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tips"
                android:background="?android:attr/listDivider" />
            <TextView
                android:id="@+id/contact_title"
                style="@style/LinkText.Bold.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/devider_two"
                android:text="@string/contact_title" />

            <TextView
                android:id="@+id/contact_me"
                style="@style/normalText.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/contact_title"
                android:autoLink="all"
                android:text="@string/contact" />

                        <View
                android:id="@+id/devider_three"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/contact_me"
                android:background="?android:attr/listDivider" />
            <TextView
                android:id="@+id/about_link_title"
                style="@style/LinkText.Bold.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/devider_three"
                android:text="@string/links_title" />

            <TextView
                android:id="@+id/about_link"
                style="@style/normalText.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/about_link_title"
                android:autoLink="all"
                android:linksClickable="true"
                android:text="@string/links" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/about_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/about_quit"
            android:textSize="15sp" />

        <Button
            android:id="@+id/about_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="@string/about_advice"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>