public class Logo extends Activity{

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		//取消标题
//		this.requestWindowFeature(Window.FEATURE_NO_TITLE);
//		this.getWindow().setFlags(WindowManager.LayoutParams.FLAG_FULLSCREEN,
//				                  WindowManager.LayoutParams.FLAG_FULLSCREEN);
	    this.setContentView(R.layout.logo);
	    
	}


	@Override
	protected void onResume() {
		super.onResume();
	    ImageView iv = (ImageView) this.findViewById(R.id.logo_bg);
	    AlphaAnimation aa = new AlphaAnimation(0.1f,1.0f);
	    aa.setDuration(3000);
	    iv.startAnimation(aa);
	    aa.setAnimationListener(new AnimationListener() {
			@Override
			public void onAnimationStart(Animation animation) {
				
			}
			
			@Override
			public void onAnimationRepeat(Animation animation) {
				// TODO Auto-generated method stub
				
			}
			
			//动画播放结束之后的处理
			@Override
			public void onAnimationEnd(Animation animation) {
				
//				Intent intent = new Intent(Logo.this,LoginActivity.class);
				Intent intent = new Intent();
				intent.setClassName("com.yuchao.ui", "com.yuchao.ui.LoginActivity");
//				intent.setClassName("com.yuchao.ui", "com.yuchao.ui.Home");
				startActivity(intent);
			    finish();
			}
		});
	}

}
