<?xml version="1.0" encoding="utf-8"?>
<resources>
<!-- from fanfoudroid -->
    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/icon_text</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

        <style name="footer_button">
         <item name="android:gravity">center_horizontal</item>
         <item name="android:background">@drawable/detail_btn_selector</item>
         <item name="android:textSize">12sp</item>
         <item name="android:textColor">#f9f9f9</item>
         <item name="android:padding">5dp</item>
         <item name="android:clickable">true</item>
    </style>
        <style name="Theme.Start" parent="android:Theme.Black">
            <item name="android:windowBackground">@null</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowFullscreen">true</item> 
        </style>
        <style name="Custom.Dialog" parent="android:style/Theme.Dialog"> 
	        <item name="android:windowNoTitle">true</item>
	        <item name="android:windowIsFloating">true</item>
	    </style>
	        <style name="LinkText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff0066cc</item>
    </style>
    <style name="LinkText.Bold" parent="@style/LinkText">
        <item name="android:textStyle">bold</item>
    </style>
        <style name="LinkText.Big" parent="@style/LinkText">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="LinkText.Bold.Big" parent="@style/LinkText.Bold">
        <item name="android:textSize">18.0sp</item>
    </style>
    <style name="LinkText.Bold.Huge" parent="@style/LinkText.Bold">
        <item name="android:textSize">18.0sp</item>
                <item name="android:typeface">serif</item>
    </style>
    <style name="user_name" parent="@style/LinkText.Bold.Big" />
    <style name="user_screen_name" parent="@style/LinkText.Bold.Big" />
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff444444</item>
    </style>
    <style name="normalText.Big" parent="@style/normalText">
        <item name="android:textSize">18.0sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="normalText.span" parent="@style/normalText">
        <item name="android:textColor">#ff888888</item>
    </style>
        
</resources>