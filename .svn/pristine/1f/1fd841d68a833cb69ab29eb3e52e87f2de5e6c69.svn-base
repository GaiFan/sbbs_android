<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

    <ScrollView
        android:id="@+id/post_main_body"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="vertical" >

        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="2dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/post_text_author"
                    style="@style/LinkText.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="AuthorID" />

                <TextView
                    android:id="@+id/post_text_time"
                    style="@style/normalText.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2012.12.21 00:00:00" />
            </RelativeLayout>

            <TextView
                android:id="@+id/PostTitle"
                style="@style/normalText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:text="Post Title"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <View
                android:id="@+id/SeperatorView"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/post_text_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@android:color/background_dark"
                style="@style/normalText.Big"
                />

            <TextView
                android:id="@+id/post_text_quoter"
                style="@style/LinkText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="15sp"
                 />

            <TextView
                android:id="@+id/post_text_quote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/post_text_source"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:textColor="#00FF7F"
                android:textSize="12sp" 
                android:visibility="gone"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/post_att_label"
                style="@style/LinkText.Bold.Big"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/post_att"
                />

            <TextView
                android:id="@+id/post_att_link"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:textSize="18sp" 
                />

            <LinearLayout
                android:id="@+id/post_att"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>