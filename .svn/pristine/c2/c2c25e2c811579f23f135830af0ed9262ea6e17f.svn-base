<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/maintab_toolbar_bg"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/post_footer_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_share_selected"
        android:text="@string/post_footer_share" />

    <TextView
        android:id="@+id/post_footer_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_comment_selected"
        android:text="@string/post_footer_reply" />

    <TextView
        android:id="@+id/post_footer_authorinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_author_selected"
        android:text="@string/post_footer_author" />

    <TextView
        android:id="@+id/post_footer_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_mail_selected"
        android:text="@string/post_footer_mail" />

    <TextView
        android:id="@+id/post_footer_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/footer_button"
        android:drawableTop="@drawable/detail_more_selected"
        android:text="@string/post_footer_more" />

</LinearLayout>

